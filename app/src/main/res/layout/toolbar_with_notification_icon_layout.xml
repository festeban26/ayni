<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appBarLayout_appBarMain_topToolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.AppBarOverlay"
    app:layout_constraintTop_toTopOf="parent">

    <!-- android:theme="@style/DarkTheme"  Makes the buttons and text color to be @style/customBlack-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/customWhite"
        android:theme="@style/ToolbarTheme"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:id="@+id/TextView_ToolbarLayout_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/deliusunicase_regular"
            android:text="@string/app_name"
            android:textColor="@color/customBlack"
            android:textSize="@dimen/app_title_font_size" />

        <ImageView
            android:id="@+id/ImageView_AppToolbar_Notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_notifications_black_24dp"
            android:tint="@color/customBlack" />
    </android.support.v7.widget.Toolbar>

</android.support.design.widget.AppBarLayout>
